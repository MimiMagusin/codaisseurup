<% if current_user != @event.user %>
  <div class="panel panel-primary">
    <div class="panel-heading">Book this event</div>

    <div class="panel-body">
      <%= render 'registrations/form' %>
    </div>
  </div>
<% end %>

<h4>categories</h4>
<% @categories.each do |category| %>
  <span class="label label-success"><%= category.name %></span>
<% end %>

<div class="panel panel-primary">
  <div class="panel-heading"><%= @event.name %></div>

  <div class="panel-body">

    <p>Address: <%= @event.location %></p>
    <p>Host: <%= @event.user.email %></p>

    <!-- Main Info -->
    <h4>Main Info</h4>
    <p> Name: <%= @event.name %></p>
    <p> Location: <%= @event.location %>
    <p> Price: <%= @event.price %>
    <p> Time: <%= @event.starts_at %> <%= @event.ends_at%></p>

    <!-- About -->
    <h4>About</h4>
    <p><%= @event.description %></p>

    <h4>Photos</h4>
<% @event.photos.each do |photo| %>
<div class="panel panel-default">
  <div class="panel-heading">
    <%= image_tag photo.image.thumbnail %>
  </div>
</div>
<% end %>


  </div>

</div>

<%= link_to "Back", events_path, class: "btn btn-default" %>
